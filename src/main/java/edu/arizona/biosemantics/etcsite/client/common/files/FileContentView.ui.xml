<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.fileContent {
			width: 800px;
			height: 500px;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HorizontalPanel>
		    <g:Label>Format for:</g:Label>
		    <g:ListBox visibleItemCount="1" ui:field="formatListBox">
				<!-- <g:item value='1'>
				  first item
				</g:item>
				<g:item value='2'>
				  second item
				</g:item> -->
		    </g:ListBox>
		</g:HorizontalPanel>
		<g:TextArea enabled="false" ui:field="textArea" styleName="{style.fileContent}"></g:TextArea>
		<g:Button ui:field="closeButton">Close</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 